/* pages/vocabulary/vocabulary.wxss */
.ArticleTitle{
  margin: 5%;
  border: 1px solid rgba(52, 76, 97, 0.575);  
  border-radius: 10px; 
  box-shadow: rgb(73, 71, 71) 7rpx 7rpx 3rpx;
  display: flex;
  flex-direction: column;
}
.art-img{
  margin-top: 3%;
  margin-left: 3%;
  margin-right: 3%;
  margin-bottom: 3%;
  width: 94%;
  height: 130px;
}

.time-author{
  margin-left: 3%;
  margin-right: 3%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.art-item-time{

  font-size: 0.7rem;
  color:rgb(129, 50, 3) ;
}
.art-item-title{
  margin-left:3%;
  margin-right: 3%;
  font-family: 'Microsoft YaHei';
  font-size: 1.1rem;
}
.art-item-author{
  font-size: 0.9rem;
  font-family: 'STSong';
}
.button{
  display: flex;
  margin-top:5%;
  margin-bottom: 5%;
  background: #664a2c;
  color: white;
  font-size: 0.9rem;
}
.butt{
  margin: 15%;
  text-align: center;
}
.title{
  color: lightseagreen;
  font-size: 1.5rem;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 15%;
}
.small-title{
  color: rgb(212, 202, 202);
  font-size: 0.6rem;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 3px;
  border-bottom: 1px solid rgb(212, 202, 202);
  padding-bottom: 30rpx;
}
.secondtitle{
display: flex;
margin: 5% 0% 5% 0%;
}
.secondtitle-box{
  margin-left: 12.5%;
}
.secondtitle-top{
  color: rgb(59, 74, 75);
  font-size: 1.0rem;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.secondtitle-up{
  color: rgb(59, 74, 75);
  font-size: 0.8rem;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.down{
  font-size: 0.8rem;
  width: 100%;
  position:fixed; 
  bottom:0;
  border-radius: 0;
}
.down::after{
 border-radius: 0;
}

page{
   background-color: rgb(247, 244, 244);
}